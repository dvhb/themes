/*
@name form-item

@description .form-item

@markup
<div class="form-item">
    <input class="input">
    <div class="form-item__counter">23</div>
</div>
<div class="form-item">
    <input class="input">
    <div class="form-item__counter">23</div>
</div>
*/

.form-item
    margin-bottom 20px
    position relative
    display block
        
    &__counter
        color $cGrey
        position absolute
        right 10px
        bottom 6px  

    &:last-child
        margin-bottom 0
        
    [class^="col-"] > &
        margin-bottom 20px 


/*
@name form-group

@description .form-group

@markup
<div class="form-group">
    <input class="input">
</div>
<div class="form-group">
    <input class="input">
</div>
*/

.form-group
    margin-bottom 60px

    &:last-child
        margin-bottom 0
        
    &_marginSm
        margin-bottom 30px 


/*
@name form-itemInline

@description .form-itemInline

@state form-itemInline_smallMargin
@state form-itemInline_top

@markup
<div class="form-itemInline">
    <input class="input">
</div>
<div class="form-itemInline">
    <input class="input">
</div>
*/

.form-itemInline
    margin-right 40px
    position relative
    display inline-block
    vertical-align middle

    &_smallMargin
        margin-right 10px
        
    &_top
        vertical-align top 


