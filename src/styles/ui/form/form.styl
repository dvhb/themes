/*
@name form-complexRow

@description .form-complexRow
    .form-complexRow__control
        input.input
    .form-complexRow__text &mdash;
    .form-complexRow__control
        input.input

@markup
<div class="form-complexRow">
    <div class="form-complexRow__control"><input class="input"></div> 
    <div class="form-complexRow__text"> &mdash; </div>   
    <div class="form-complexRow__control"><input class="input"></div>    
</div>
*/

.form-complexRow
    display flex
    align-items center

    &__control
        flex 1 1 auto

    &__text
        margin 0 10px
        

/*
@name form-label

@description .form-label

@state form-label_inline

@markup
<div class="form-label">Label</div>
<input style="display: inline-block; width: 100px;" class="input">
*/ 

.form-label
    display block
    margin-bottom 10px
    color $cGrey

    &_inline
        display inline-block
        vertical-align middle
        margin-bottom 0
        margin-right 10px


/*
@name form-inputWithIcon

@description .form-inputWithIcon

@state form-inputWithIcon_calendar

@markup
<label class="form-inputWithIcon">
    <input placeholder="дд.мм.гг" class="input">
    <div class="form-inputWithIcon__control">
        <svg class="icon"><use xlink:href="#icon_date"></use></svg>
    </div>
</label>
*/ 

.form-inputWithIcon
    position relative
    display block

    &_calendar
        width 100px 

    &__control
        cursor pointer
        position absolute
        top 50%
        transform translateY(-50%)
        right 10px
        font-size 16px
        color $cBlue


