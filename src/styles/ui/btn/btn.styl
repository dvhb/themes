/*
@name btn

@state :hover
@state btn_block - Кнопка блок
@state btn_link - Кнопка как ссылка
@state btn_linkRed - Кнопка как красная ссылка
@state btn_transparent - Кнопка с прозрачным фоном
@state btn_transparentRed - Кнопка красная с прозрачным фоном 
@state _disabled - Неактивная кнопка

@markup
<div class="btn">Button</div>
*/
.btn
    box-sizing border-box
    font-size 24px
    text-align center
    height 72px
    display inline-block
    line-height 72px
    color #fff
    cursor pointer
    background none
    border-radius 2px
    padding 0 10px
    outline none
    background $cBlue
    font-weight 500
    font-family 'Formular', sans-serif
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    border none
    vertical-align middle
    box-shadow 0 5px 10px 0 rgba(10,114,156,0.60)

    &:hover, 
    &.pseudo-class-hover
        text-decoration none
        background lighten($cBlue, 10%)
        color #FFF
        
    &:active
        box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.40);

    &_block
        display block
        width 100%
        padding 0 10px
        
    &_link
        padding 0
        height auto 
        background transparent 
        color $cBlue
        line-height normal 
        border-radius none
        
        &:hover
            background none 
            color darken($cBlue, -30%)
            
    &_linkRed
        @extend .btn_link        
        color $cRed 
        
        &:hover
            color darken($cRed, -30%)
            
    &_transparent
        background transparent 
        color $cGreen
        box-shadow 0 0 0 2px $cGreen inset
        
        &:hover
            background transparent 
            box-shadow 0 0 0 2px lighten($cGreen, 10%) inset
            color lighten($cGreen, 10%) 
            
    &_transparentRed
        background transparent 
        color $cRed
        box-shadow 0 0 0 2px $cRed inset
        
        &:hover
            background transparent 
            box-shadow 0 0 0 2px lighten($cRed, 10%) inset
            color lighten($cRed, 10%) 

    &._disabled,
    &[disabled]
        opacity .5
        cursor default
        pointer-events none
