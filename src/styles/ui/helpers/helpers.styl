*
    max-height 999999px //android font-size fix
    -webkit-font-smoothing: antialiased;
    outline none

html
body
    margin 0
    padding 0
    width 100%
    height 100%

body
    font 14px 'Formular', sans-serif;
    color $cBlack
    position relative
    -webkit-text-size-adjust 100% // ios font-size fix
    background svg('background') !important
    background-color #f2f4f6
    background-position left center
    background-attachment fixed

/***** ie fix ****/
a img
    border none
    
img
    max-width 100% 
    display block 

a    
    text-decoration none
    color $cBlue 

    &:hover
        text-decoration none
        color darken($cBlue, -30%)

pre
    font-family monospace 
    border 1px solid #4C4C4C
    margin-top 20px 
    overflow-x auto 
    display flex 
    flex-direction column

.hljs
    padding 20px !important
    overflow-x visible !important

ol
    padding-left 1.2em
    display block
    margin-bottom 1.6em  
    
    li
        list-style-type decimal 

/*!
@name Heading 1 
@markup 
<h1>Heading 1 (36px)</h1> 
*/

h1 
    font-size 40px 
    margin-top 30px 
    margin-bottom 20px
    font-weight 500  
    line-height normal 
   
/*!
@name Heading 2 
@markup 
<h2>Heading 2 (22px)</h2> 
*/

h2
    font-size 24px
    margin-top 20px 
    margin-bottom 10px 
    font-weight 500 
    line-height normal 
    
/*!
@name Heading 3 
@markup 
<h2>Heading 3 (18px)</h2> 
*/
    
h3
    font-size 18px
    margin-top 20px 
    margin-bottom 5px 
    line-height normal 
        
    
/*!
@name Paragraph
@markup 
<p>Paragraph</p> 
*/
    
p  
    margin-bottom 10px
    
    &:last-child
        margin-bottom 0 
        
    & + h2
        margin-top 30px 
    

/*!
@name textLg
@markup 
<div class="textLg">textLg</div> 
*/

.textLg
    font-size 20px
    line-height 32px 

/*!
@name Semibold
@markup 
<div class="textSemibold">textSemibold</div> 
*/

.textSemibold
    font-weight 600 
    
b 
strong
    font-weight 700 

/*!
@name text font weight normal
@markup 
<div class="textNormal">Text noraml</div> 
*/

.textNormal
    font-weight 400 


/*!
@name Italic
@markup 
<i>Italic text</i> 
*/

i
em
    font-style italic 

   
small
    font-size .76em 
    display inline-block 

.pullRight
    float right

.pullLeft
    float left


/*!
@name text center
@markup 
<div class="textCenter">text center</div> 
*/

.textCenter
    text-align center


/*!
@name text right
@markup 
<div class="textRight">text right</div> 
*/
.textRight
    text-align right
   

/*!
@name text uppercase
@markup 
<div class="textUppercase">text uppercase</div> 
*/

.textUppercase
    text-transform uppercase


/*!
@name text grey
@markup 
<div class="textGrey">text grey</div> 
*/

.textGrey 
    color $cGrey
    

/*!
@name text blue
@markup 
<div class="textBlue">text blue</div> 
*/

.textBlue
    color $cBlue
 

/*!
@name text red
@markup 
<div class="textRed">text red</div> 
*/   

.textRed
    color $cRed 


/*!
@name text black
@markup 
<div class="textBlack">text black</div> 
*/    

.textBlack
    color $cBlack


/*!
@name text green
@markup 
<div class="textGreen">text green</div> 
*/    

.textGreen
    color $cGreen 

/*!
@name text purple
@markup 
<div class="textPurple">text purple</div> 
*/    

.textPurple
    color $cPurple

/*!
@name text first letter uppercase
@markup
<div class="textFirstUpper">text first letter uppercase</div>
*/
.textFirstUpper
    &:first-letter
        text-transform uppercase
    

/*!
@name No margin block
@markup
<div class="noMargin">No margin block</div>
*/
.noMargin 
    margin 0 !important

.visible-xs-inline
    display none 
    

.inlineBlock
    display inline-block 
    vertical-align middle 

